<div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-12">

          <p id="notice"><%= notice %></p>

          <h1>Episodes</h1>

          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @episodes.each do |episode| %>
                <tr>
                  <td><img class="img-rounded" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Generic placeholder image" width="200" height="125"></td>
                  <td><h3><%= episode.name %></h3> <br>
                    <p><%= episode.description %></p> <br>
                    <%= link_to 'Show', episode, class: "btn btn-info" %>
                    <%= link_to 'Edit', edit_episode_path(episode), class: "btn btn-warning" %>
                    <%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Episode', new_episode_path %>
      </div>
    </div>
</div>
